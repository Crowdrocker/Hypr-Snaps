#!/bin/bash
# J.A.R.V.I.S. Time-based Greeting

HOUR=$(date +%H)
SOUND_DIR="$HOME/.config/sounds"

if [ $HOUR -lt 12 ]; then
    GREETING="Good morning"
elif [ $HOUR -lt 18 ]; then
    GREETING="Good afternoon"
else
    GREETING="Good evening"
fi

if [ -f "$SOUND_DIR/jarvis-startup.mp3" ]; then
    mpv --no-video "$SOUND_DIR/jarvis-startup.mp3" &
fi

notify-send -u normal "J.A.R.V.I.S." "$GREETING, Matthew. All systems operational." -i computer
